<!-- content -->
<div class="contant">
    <div class="row head">
        <div class="col">
          <h1 style="font-weight: 500; color: #707070;">รายวิชาทั้งหมด</h1>
        </div>
        <div class="col text-end">
          <a href="#" class="add-btn btn-primary btn">+ เพิ่มรายวิชาใหม่</a>
        </div>
    </div>

    <div class="row sub_all">
        <% for(var i=0; i < subjects.length; i++) { %>
            <div class="col-sm-6 mb-4">
                <div class="card" style="min-height: 210px">
                    <div class="theme"></div>
                    <a href="/subject/item/<%= subjects[i]._id %>" class="card-body text-decoration-none">
                        <h5 class="card-title">วิชา: <%= subjects[i].SubName %></h5>
                        <p class="card-text"><%= subjects[i].SubDescription %></p>
                    </a>
                    <div class="icon">
                        <i class='bx bx-star' ></i>
                        <form action="/deleteSubject/<%= subjects[i]._id %>" method="POST" onsubmit="displayConfirmation()">
                            <button type="submit" class="delete-btn">
                                <i class='bx bx-trash-alt'></i>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        <%  } %>
    </div>
</div>
<!-- content -->

<!-- create -->
<div class="popup">
    <div class="popup-content">
        <form action="/createSubject" method="POST">
            <h1>เพิ่มรายวิชาใหม่</h1>

            <div class="input-box">
                <span class="span-text">ชื่อรายวิชา:</span>
                <input type="text" name="SubName" id="SubName" placeholder="วิชา" required>
            </div>


            <div class="input-box">
                <span class="span-text">คำอธิบาย:</span>
                <textarea name="SubDescription" id="SubDescription" placeholder="คำอธิบาย"></textarea>
            </div>

            <div class="form-btn">
                <a class="close-btn">ยกเลิก</a>
                <button type="submit" class="btn">สร้าง</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal HTML -->
<div id="confirmationModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this subject?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>